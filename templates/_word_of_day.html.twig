<!-- Word of the Day -->
<turbo-frame id="word-of-day">
{% if word_of_the_day %}
<div class="bg-body-tertiary rounded-3 shadow-lg mb-4">
    <div class="row g-0 h-100">
        <!-- Left side with wave SVG -->
        <div class="col-lg-4 position-relative overflow-hidden d-flex align-items-center justify-content-center" style="min-height: 200px;">
            <!-- Decorative wave shape -->
            <svg class="position-absolute start-0 top-0 w-100 h-100" style="color: var(--bs-primary);" preserveAspectRatio="none" viewBox="0 0 400 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M0 0L67 12C133 24 267 48 400 55V200H0V0Z" fill="currentColor" opacity="0.1"></path>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M0 20L67 32C133 44 267 68 400 75V200H0V20Z" fill="currentColor" opacity="0.05"></path>
            </svg>
            <div class="position-relative z-1 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 80px; height: 80px;">
                    <i class="bi bi-lightbulb fs-1" style="color: var(--bs-primary);"></i>
                </div>
                <h6 class="text-uppercase mb-2" style="color: var(--bs-primary);">WOTD</h6>
                <a href="{{ path('word_of_day', {'refresh': 'true'}) }}" class="btn btn-outline-primary btn-sm" title="刷新每日一词">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </div>
        
        <!-- Right side with content -->
        <div class="col-lg-8 p-4">
            <div class="mb-3">
                <h3 class="mb-2" style="color: var(--bs-primary);">{{ word_of_the_day.word }}</h3>
                <div class="d-flex flex-wrap align-items-baseline gap-2 mb-2">
                    {% if word_of_the_day.type %}
                        <span class="badge bg-primary bg-opacity-10 border border-primary border-opacity-25 px-2 py-1" style="color: var(--bs-primary);">{{ word_of_the_day.type }}</span>
                    {% endif %}
                </div>
            </div>
            
            <p class="fs-5 mb-3 text-body">{{ word_of_the_day.meaning }}</p>
            
            {% if word_of_the_day.hasExamples %}
                <blockquote class="blockquote border-start border-primary border-3 ps-3 mb-3">
                    <p class="mb-0 fst-italic text-body">{{ word_of_the_day.getFirstExample() }}</p>
                </blockquote>
            {% endif %}
            
            <!-- Additional Information -->
            <div class="row g-3">
                {% if word_of_the_day.hasSynonyms %}
                    <div class="col-md-6">
                        <h6 class="text-body-secondary mb-2"><i class="bi bi-arrow-right-circle me-1"></i>同义词</h6>
                        <p class="mb-0 text-body">{{ word_of_the_day.getSynonymsString() }}</p>
                    </div>
                {% endif %}
                
                {% if word_of_the_day.hasAntonyms %}
                    <div class="col-md-6">
                        <h6 class="text-body-secondary mb-2"><i class="bi bi-arrow-left-circle me-1"></i>反义词</h6>
                        <p class="mb-0 text-body">{{ word_of_the_day.getAntonymsString() }}</p>
                    </div>
                {% endif %}
            </div>
            
            {% if word_of_the_day.hasEtymology %}
                <div class="mt-3 p-3 bg-body-secondary bg-opacity-10 rounded-2">
                    <h6 class="text-body-secondary mb-2"><i class="bi bi-book me-1"></i>词源</h6>
                    <p class="mb-0 small text-body">{{ word_of_the_day.etymology }}</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% else %}
<div class="bg-body-tertiary rounded-3 shadow-lg mb-4">
    <div class="row g-0 h-100">
        <div class="col-lg-4 position-relative overflow-hidden d-flex align-items-center justify-content-center" style="min-height: 200px;">
            <div class="position-relative z-1 text-center">
                <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 80px; height: 80px;">
                    <i class="bi bi-exclamation-triangle fs-1 text-secondary"></i>
                </div>
                <h6 class="text-secondary text-uppercase mb-2">WOTD</h6>
                <a href="{{ path('word_of_day', {'refresh': 'true'}) }}" class="btn btn-outline-secondary btn-sm" title="刷新每日一词">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-8 p-4 d-flex align-items-center">
            <div class="text-center w-100">
                <p class="text-muted mb-0">暂无每日一词数据</p>
            </div>
        </div>
    </div>
</div>
{% endif %}
</turbo-frame>