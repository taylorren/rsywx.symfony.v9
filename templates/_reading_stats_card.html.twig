<!-- Reading Statistics Card -->
{% if readingSummary %}
<div class="col-md-6 mb-3">
    <div class="card shadow-sm h-100">
        <img src="/images/reading.png" class="card-img-top" alt="阅读" style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
            <p class="card-text flex-grow-1">
                截止今日（{{ "now"|date("Y年m月d日") }}），已阅读<strong>{{ readingSummary.books_read|default(0) }}</strong>本书，
                撰写评论<strong>{{ readingSummary.reviews_written|default(0) }}</strong>篇，
                阅读周期<strong>{{ readingSummary.reading_period.total_days|default(0) }}</strong>天。
            </p>
            <div class="d-flex gap-2 mt-auto">
                <a href="/readings" class="btn btn-primary btn-sm flex-fill">
                    <i class="bi bi-chat-square-text"></i> 我的评论
                </a>
            </div>
        </div>
    </div>
</div>
{% endif %}