{# Today's Books Section - Books purchased on this day in previous years #}
<div class="today-books-section mb-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-calendar-day text-primary me-3" style="font-size: 1.5rem;"></i>
            <div>
                <h3 class="mb-1 fw-bold">今日藏书</h3>
                <p class="text-muted mb-0 small">在往年的今天购入的书籍</p>
            </div>
        </div>
        <div class="text-end">
            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                <i class="fas fa-history me-1"></i>
                历史回顾
            </span>
        </div>
    </div>

    <div id="today-books-container" class="position-relative">
        {# Loading state #}
        <div id="today-books-loading" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">加载中...</span>
            </div>
            <p class="text-muted mt-3 mb-0">正在加载今日藏书...</p>
        </div>

        {# Content will be loaded here via JavaScript #}
        <div id="today-books-content" class="d-none">
            {# Books will be rendered here #}
        </div>

        {# Empty state #}
        <div id="today-books-empty" class="text-center py-5 d-none">
            <div class="text-muted">
                <i class="fas fa-calendar-times fa-3x mb-3 opacity-50"></i>
                <h5 class="mb-2">今天没有历史藏书</h5>
                <p class="mb-0">在往年的今天没有购入任何书籍</p>
            </div>
        </div>

        {# Error state #}
        <div id="today-books-error" class="text-center py-5 d-none">
            <div class="text-danger">
                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                <h5 class="mb-2">加载失败</h5>
                <p class="mb-3">无法加载今日藏书数据</p>
                <button class="btn btn-outline-primary btn-sm" onclick="loadTodaysBooks()">
                    <i class="fas fa-redo me-1"></i>重试
                </button>
            </div>
        </div>
    </div>
</div>

{# JavaScript for loading today's books #}
<script>
async function loadTodaysBooks() {
    const loadingEl = document.getElementById('today-books-loading');
    const contentEl = document.getElementById('today-books-content');
    const emptyEl = document.getElementById('today-books-empty');
    const errorEl = document.getElementById('today-books-error');

    // Show loading state
    loadingEl.classList.remove('d-none');
    contentEl.classList.add('d-none');
    emptyEl.classList.add('d-none');
    errorEl.classList.add('d-none');

    try {
        const response = await fetch('/api/books/today');
        const result = await response.json();

        loadingEl.classList.add('d-none');

        if (result.success && result.data && result.data.length > 0) {
            // Render books
            contentEl.innerHTML = renderTodaysBooks(result.data);
            contentEl.classList.remove('d-none');
        } else {
            // Show empty state
            emptyEl.classList.remove('d-none');
        }
    } catch (error) {
        console.error('Failed to load today\'s books:', error);
        loadingEl.classList.add('d-none');
        errorEl.classList.remove('d-none');
    }
}

function renderTodaysBooks(books) {
    const booksHtml = books.map(book => {
        const yearsAgo = book.years_ago || calculateYearsAgo(book.purchdate);
        const coverUrl = book.cover_uri || '/images/default.jpg';
        
        return `
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0 today-book-card">
                    <div class="position-relative">
                        <img src="${coverUrl}" 
                             class="card-img-top" 
                             alt="${book.title}"
                             style="height: 200px; object-fit: cover;"
                             onerror="this.src='/images/default.jpg'">
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-clock me-1"></i>
                                ${yearsAgo}年前
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title fw-bold mb-2 text-truncate" title="${book.title}">
                            ${book.title}
                        </h6>
                        <p class="card-text text-muted small mb-2">
                            <i class="fas fa-user me-1"></i>
                            ${book.author}
                        </p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    ${book.purchdate}
                                </small>
                                <small class="text-success fw-bold">
                                    ¥${book.price}
                                </small>
                            </div>
                            <div class="mt-2">
                                <a href="/books/${book.bookid}.html" 
                                   class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-eye me-1"></i>
                                    查看详情
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }).join('');

    return `
        <div class="row">
            ${booksHtml}
        </div>
        <div class="text-center mt-4">
            <p class="text-muted small mb-0">
                <i class="fas fa-info-circle me-1"></i>
                共找到 ${books.length} 本在往年今日购入的书籍
            </p>
        </div>
    `;
}

function calculateYearsAgo(purchdate) {
    const purchaseDate = new Date(purchdate);
    const today = new Date();
    return today.getFullYear() - purchaseDate.getFullYear();
}

// Load today's books when the page loads
document.addEventListener('DOMContentLoaded', function() {
    loadTodaysBooks();
});
</script>

<style>
.today-book-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.today-book-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.today-books-section .badge {
    font-size: 0.85rem;
}

.spinner-border {
    width: 2rem;
    height: 2rem;
}
</style>