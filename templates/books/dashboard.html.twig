{% extends 'base.html.twig' %}

{% block title %}Book Dashboard - RSYWX Library{% endblock %}

{% block body %}
<div class="container">
    {% if error %}
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> {{ error }}
        </div>
    {% endif %}

    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-speedometer2"></i> Book Dashboard</h1>
            <p class="lead">Manage and explore your book collection</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 quick-action-card">
                <div class="card-body">
                    <i class="bi bi-search display-4 mb-3 text-primary"></i>
                    <h5>Search Books</h5>
                    <p class="text-muted">Find books by title, author, or keyword</p>
                    <a href="{{ path('books_search') }}" class="btn btn-primary">Search</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 quick-action-card">
                <div class="card-body">
                    <i class="bi bi-clock display-4 mb-3 text-success"></i>
                    <h5>Latest Books</h5>
                    <p class="text-muted">Recently added to your collection</p>
                    <a href="{{ path('books_latest') }}" class="btn btn-success">View Latest</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 quick-action-card">
                <div class="card-body">
                    <i class="bi bi-shuffle display-4 mb-3 text-warning"></i>
                    <h5>Random Books</h5>
                    <p class="text-muted">Discover something unexpected</p>
                    <a href="{{ path('books_random') }}" class="btn btn-warning">Discover</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 quick-action-card">
                <div class="card-body">
                    <i class="bi bi-calendar-day display-4 mb-3 text-info"></i>
                    <h5>Today's Books</h5>
                    <p class="text-muted">Books purchased on this day</p>
                    <a href="{{ path('books_today') }}" class="btn btn-info">View Today</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Overview -->
    {% if stats %}
    <div class="row mb-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Collection Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2 mb-3">
                            <div class="stat-item">
                                <h3 class="text-primary">{{ stats.totalBooks }}</h3>
                                <p class="mb-0">Total Books</p>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="stat-item">
                                <h3 class="text-success">{{ stats.totalAuthors }}</h3>
                                <p class="mb-0">Authors</p>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="stat-item">
                                <h3 class="text-warning">{{ stats.formattedTotalValue }}</h3>
                                <p class="mb-0">Total Value</p>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="stat-item">
                                <h3 class="text-info">{{ stats.totalCountries }}</h3>
                                <p class="mb-0">Countries</p>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="stat-item">
                                <h3 class="text-danger">{{ stats.formattedAveragePrice }}</h3>
                                <p class="mb-0">Avg. Price</p>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="stat-item">
                                <h3 class="text-secondary">{{ stats.totalLanguages }}</h3>
                                <p class="mb-0">Languages</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recently Visited</h5>
                    <a href="{{ path('books_recent') }}" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    <p class="text-muted">Books you've recently viewed or accessed</p>
                    <a href="{{ path('books_recent') }}" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-arrow-right"></i> View Recent Books
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-question-circle"></i> Forgotten Books</h5>
                    <a href="{{ path('books_forgotten') }}" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
                <div class="card-body">
                    <p class="text-muted">Books that haven't been accessed in a while</p>
                    <a href="{{ path('books_forgotten') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-right"></i> Rediscover Books
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}