{% extends 'base.html.twig' %}

{% block title %}手气不错 - RSYWX Library{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-shuffle text-warning me-2"></i>
            手气不错
        </h1>
        <a href="{{ path('books_lucky', {'refresh': 'true'}) }}" class="btn btn-outline-warning">
            <i class="bi bi-arrow-clockwise me-1"></i>
            再换一批
        </a>
    </div>

    {% if error is defined and error %}
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            {{ error }}
        </div>
    {% else %}
        {% if books is empty %}
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                暂无随机书籍推荐
            </div>
        {% else %}
            <div class="row g-4">
                {% for book in books %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 book-card">
                            <div class="row g-0 h-100">
                                <div class="col-4">
                                    {% if book.coverUri %}
                                        <img src="/covers/{{ book.bookid }}.webp" 
                                             alt="{{ book.title }}" 
                                             class="img-fluid h-100 zoom-thumbnail" 
                                             style="object-fit: cover; cursor: pointer; border-radius: 0.375rem 0 0 0.375rem;"
                                             data-bs-toggle="modal" 
                                             data-bs-target="#imageModal"
                                             data-bs-image="/covers/{{ book.bookid }}.webp"
                                             data-bs-title="{{ book.title }}">
                                    {% else %}
                                        <div class="bg-light d-flex align-items-center justify-content-center h-100" 
                                             style="border-radius: 0.375rem 0 0 0.375rem;">
                                            <i class="bi bi-book text-muted" style="font-size: 2rem;"></i>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="col-8">
                                    <div class="card-body d-flex flex-column h-100">
                                        <h6 class="card-title">
                                            <a href="{{ path('book_details', {bookId: book.bookid}) }}" 
                                               class="text-decoration-none stretched-link">
                                                {{ book.title }}
                                            </a>
                                        </h6>
                                        {% if book.author %}
                                            <p class="card-text text-muted small mb-2">【{{ book.region}}】{{ book.author }}</p>
                                        {% endif %}
                                        <div class="mt-auto">
                                            {% if book.lastVisited %}
                                                <small class="text-muted d-block">最后访问: {{ book.lastVisited }}</small>
                                            {% endif %}
                                            {% if book.formattedPurchaseDate %}
                                                <small class="text-muted">购买日期: {{ book.formattedPurchaseDate }}</small>
                                            {% endif %}
                                            {% if book.location %}
                                                <div class="mt-1">
                                                    <span class="badge bg-warning text-dark small">{{ book.location }}</span>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">书籍封面</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const imageModal = document.getElementById('imageModal');
    if (imageModal) {
        imageModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const imageSrc = button.getAttribute('data-bs-image');
            const imageTitle = button.getAttribute('data-bs-title');
            
            const modalImage = imageModal.querySelector('#modalImage');
            const modalTitle = imageModal.querySelector('#imageModalLabel');
            
            modalImage.src = imageSrc;
            modalImage.alt = imageTitle;
            modalTitle.textContent = imageTitle;
        });
    }
});
</script>
{% endblock %}