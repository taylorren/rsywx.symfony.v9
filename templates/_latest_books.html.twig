<!-- Latest Books -->
<div class="col-lg-6 mb-4">
    <div class="card h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-clock"></i> 最新图书</h5>
            <a href="{{ path('books_latest') }}" class="btn btn-sm btn-outline-primary">查看全部</a>
        </div>
        <div class="card-body">
            {% if latest_books is not empty %}
                {% for book in latest_books %}
                    <div class="d-flex mb-3 pb-3 {% if not loop.last %}border-bottom{% endif %}">
                        <div class="flex-shrink-0">
                            {% if book.hasCover %}
                                <img src="/covers/{{ book.bookid }}.webp" alt="{{ book.title }}" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            {% else %}
                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 70px;">
                                    <i class="bi bi-book text-white"></i>
                                </div>
                            {% endif %}
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">
                                <a href="{{ path('book_details', {bookId: book.bookid}) }}" class="text-decoration-none">
                                    {{ book.title }}
                                </a>
                            </h6>
                            <p class="mb-1 text-muted small">{{ book.author }}</p>
                            <small class="text-muted">{{ book.formattedPurchaseDate }}</small>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted">暂无图书</p>
            {% endif %}
        </div>
    </div>
</div>