<turbo-frame id="random-books">
    <div class="card h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-shuffle"></i> 手气不错</h5>
            <a href="{{ path('random_books', {'refresh': 'true'}) }}" class="btn btn-sm btn-outline-primary">再换一批</a>
        </div>
        <div class="card-body">
            {% if random_books is not empty %}
                <div class="row g-3">
                    {% for book in random_books %}
                        <div class="col-6 col-lg-3">
                            <div class="text-center">
                                <div class="mb-2">
                                    {% if book.hasCover %}
                                        <img src="/covers/{{ book.bookid }}.webp" alt="{{ book.title }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                                    {% else %}
                                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-book text-white fs-3"></i>
                                        </div>
                                    {% endif %}
                                </div>
                                <h6 class="mb-1 small">
                                    <a href="{{ path('book_details', {bookId: book.bookid}) }}" class="text-decoration-none text-truncate d-block" title="{{ book.title }}">
                                        {{ book.title }}
                                    </a>
                                </h6>
                                <div class="text-muted small">
                                    <div class="mb-1">
                                        购买日期：{{ book.formattedPurchaseDate }}
                                    </div>
                                    {% if book.lastVisited %}
                                        <div class="mb-1">
                                            最后访问：{{ book.lastVisited }}
                                        </div>
                                        <div>
                                            访问次数：{{ book.totalVisits }} 次
                                        </div>
                                    {% else %}
                                        <div>
                                            访问次数：未访问
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted text-center">暂无图书</p>
            {% endif %}
        </div>
    </div>
</turbo-frame>