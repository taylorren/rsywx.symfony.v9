{% extends 'base.html.twig' %}

{% block title %}任氏有无轩 | 藏书 读书 博客 维客 资源{% endblock %}

{% block body %}
<div class="container-fluid" style="max-width: 1600px; margin: 0 auto;">
    {% if error is defined and error %}
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> {{ error }}
        </div>
    {% endif %}

    <div class="card shadow-sm mb-4">
        <div class="card-body p-0">
            {{ include('_hero_section.html.twig') }}
            
            <div class="p-4">
                {# Library Section - Contains stats cards and latest books #}
                {{ include('_library_section.html.twig') }}
                
                {# Readings Section - Contains reading statistics and latest reading activities #}
                {{ include('_readings_section.html.twig') }}
                
                {# Other Section - Contains Word of the Day and Quote of the Day #}
                {{ include('_other_section.html.twig') }}
            </div>
        </div>
    </div>

</div>
{% endblock %}
