{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - RSYWX{% endblock %}

{% block body %}
<div class="container mt-5 pt-5">
    <div class="page-header mb-4">
        <h1 class="text-center">
            <i class="{{ page_icon }}"></i> {{ page_title }}
        </h1>
        <p class="text-center text-muted">{{ page_description }}</p>
    </div>

    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {% else %}
        {% if readingReviews|length > 0 %}
            <div class="row">
                {% for review in readingReviews %}
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="card h-100 book-card">
                            {% set cover_image = review.feature ? review.feature : ('/covers/' ~ review.bookid ~ '.webp') %}
                            <img src="{{ cover_image }}" class="card-img-top" alt="{{ review.book_title }}">
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a href="{{ review.uri }}" class="text-decoration-none" target="_blank">{{ review.title }}</a>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <a href="{{ path('book_details', {'bookId': review.bookid}) }}" class="text-muted text-decoration-none">{{ review.book_title }}</a>
                                </h6>
                                <p class="card-text text-muted">发布日期: {{ review.datein }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if pagination %}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mt-4">
                        {% if pagination.has_previous %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('reading_index', {'page': pagination.previous}) }}">上一页</a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">上一页</span>
                            </li>
                        {% endif %}

                        <li class="page-item active">
                            <span class="page-link">{{ current_page }} / {{ pagination.total }}</span>
                        </li>

                        {% if pagination.has_next %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('reading_index', {'page': pagination.next}) }}">下一页</a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">下一页</span>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        {% else %}
            <div class="text-center">
                <i class="bi bi-book" style="font-size: 4rem; color: #ccc;"></i>
                <h3>暂无阅读记录</h3>
                <p class="text-muted">还没有任何阅读记录或评论</p>
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}